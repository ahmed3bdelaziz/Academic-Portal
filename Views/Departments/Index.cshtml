@model List<Department>

@{
    ViewData["Title"] = "Departments List";
}

<h1>@ViewData["Title"]</h1>
<a asp-action="Add" class="btn btn-primary mb-3">Add New Department</a>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-3">
                <partial name="_DepartmentCardPartial" model="item" />
            </div>
        }
    </div>
</div>
